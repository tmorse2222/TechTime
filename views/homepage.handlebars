{{#if posts}}
{{#each posts as |post|}}
<div class="post-card">
    <h2>{{post.title}}</h2>
    <p>{{post.body}}</p>
    <p>{{post.created_at}}</p>
    <p>{{post.user.username}}</p>
    <button class="view-post-btn" id="{{post.id}}">View Post</button>
</div>
{{/each}}
{{else}}
<div>
    <h2>No posts right now</h2>
</div>
{{/if}}
<script src="./js/homepage.js"></script>