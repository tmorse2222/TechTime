<h2>Welcome {{username}}</h2>
{{# if posts}}
{{# each posts as |post|}}
<div class="post-card">
    <h2>{{post.title}}</h2>
    <p>{{post.body}}</p>
    <p>{{post.created_at}}</p>
    <p>{{post.id}}</p>
</div>
{{/each}}
{{else}}
<h2>You dont have any posts!</h2>
{{/if}}
<div>
    <h2>Make a post</h2>
    <form class="post-form">
        <label for="title">Title</label>
        <input type="text" name="title" id="title-post">
        <label for="body">Body</label>
        <input type="text" name="body" id="body-post">
        <button type="submit">Submit</button>
    </form>
</div>

<script src="/js/dashboard.js"></script>
