{{# if posts}}
{{# each posts as |post|}}
<div>
    <h2>{{post.title}}</h2>
    <p>{{post.content}}</p>
    <p>{{post.created_at}}</p>
    <p>{{post.user.username}}</p>
</div>
{{/each}}
{{else}}
<h2>You dont have any posts!</h2>
{{/if}}
<div>
    <h2>Make a post</h2>
    <form class="post-form">
        <label for="title">Title</label>
        <input type="text" name="title" id="title-post">
        <label for="content">Content</label>
        <input type="text" name="content" id="content-post">
        <button type="submit">Submit</button>
    </form>
</div>